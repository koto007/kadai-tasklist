<div class="row">
<div class="col-lg-6 col-lg-offset-3 col-sm-8 col-sm-offset-2">

<%= form_for(task) do |f| %>


<div class="form-group">
  <%= f.label :status, 'ステータス' %>
  <%= f.text_field :status, class: 'form-control' %>
</div>

<div class="form-group">
  <%= f.label :content,  'タスク' %>
  <%= f.text_field :content, class:'form-control' %>
</div>

<button class="btn btn-primary" type="submit">投稿</button>

<% end %>
  <% if task.errors.any? %>
    <div id="alert alert-warning">
      <ul>
        <% task.errors.full_messages.each do |task| %>
          <li><%= task %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
</div>
</div>
